<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pachatary">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.pachatary.presentation.common.PachataryApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.pachatary.presentation.main.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pachatary.presentation.scene.show.ExperienceMapActivity"
            android:label="@string/title_activity_experience_map"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.pachatary.presentation.scene.edition.CreateSceneActivity"
            android:label="@string/title_activity_create_scene"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.pachatary.presentation.common.edition.EditTitleAndDescriptionActivity"
            android:label="@string/title_activity_edit_title_and_description"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.pachatary.presentation.common.edition.SelectLocationActivity"
            android:label="@string/title_activity_select_location"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.pachatary.presentation.scene.edition.EditSceneActivity"
            android:label="@string/title_activity_edit_scene"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.pachatary.presentation.experience.edition.CreateExperienceActivity"
            android:label="@string/title_activity_create_experience"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.pachatary.presentation.experience.edition.EditExperienceActivity"
            android:label="@string/title_activity_edit_experience"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.pachatary.presentation.register.RegisterActivity"
            android:label="@string/title_register_activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.pachatary.presentation.register.ConfirmEmailActivity"
            android:label="@string/title_confirm_email_activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter android:label="@string/filter_view_confirm_email_activity">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "https://pachatary.com -->
                <data android:scheme="https"
                    android:host="@string/https_deeplink_host"
                    android:path="/people/me/email-confirmation"/>
                <data android:scheme="http"
                    android:host="@string/https_deeplink_host"
                    android:path="/people/me/email-confirmation"/>
                <data android:scheme="app"
                    android:host="@string/app_deeplink_host"
                    android:path="/people/me/email-confirmation"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.scene.show.SceneListActivity"
            android:label="@string/title_scenes_list_activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.experience.show.SearchSettingsActivity"
            android:label="@string/title_search_settings_activity"
            android:screenOrientation="portrait"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity android:name=".presentation.main.WelcomeActivity"
            android:label="@string/title_welcome_activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".presentation.login.AskLoginEmailActivity"
            android:label="@string/title_ask_login_email_activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.pachatary.presentation.login.LoginActivity"
            android:label="@string/title_login_activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter android:label="@string/filter_view_login_activity">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "https://pachatary.com -->
                <data android:scheme="https"
                    android:host="@string/https_deeplink_host"
                    android:path="/people/me/login"/>
                <data android:scheme="http"
                    android:host="@string/https_deeplink_host"
                    android:path="/people/me/login"/>
                <data android:scheme="app"
                    android:host="@string/app_deeplink_host"
                    android:path="/people/me/login"/>
            </intent-filter>
        </activity>
        <activity android:name=".presentation.experience.show.PersonsExperienceActivity"
            android:label="@string/title_persons_experiences"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".presentation.main.SettingsActivity"
            android:label="@string/title_settings_activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".presentation.main.WebViewActivity"
            android:label="@string/title_settings_activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.pachatary.presentation.experience.router.ExperienceRouterActivity"
            android:label="@string/title_experience_router_title"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter android:label="@string/filter_view_experience_router_activity">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "https://pachatary.com -->
                <data android:scheme="https"
                    android:host="@string/https_deeplink_host"
                    android:pathPattern="/e/..*" />
                <data android:scheme="http"
                    android:host="@string/https_deeplink_host"
                    android:pathPattern="/e/..*" />
                <data android:scheme="app"
                    android:host="@string/app_deeplink_host"
                    android:pathPattern="/experiences/..*" />
            </intent-filter>
        </activity>
    </application>

</manifest>