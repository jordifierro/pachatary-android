<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.pachatary.presentation.common.view.SquareImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-48dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/picture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_edit"
        android:tint="@color/black"
        app:backgroundTint="@color/colorAccent"
        android:visibility="invisible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_scene_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-48dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/picture"
        android:layout_toLeftOf="@+id/edit_button"
        android:layout_toStartOf="@+id/edit_button"
        app:srcCompat="@android:drawable/ic_input_add"
        android:tint="@color/black"
        app:backgroundTint="@color/colorAccent"
        android:visibility="invisible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-48dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/picture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_star_black_24dp"
        android:tint="@color/grey"
        app:backgroundTint="@color/white"
        android:visibility="invisible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/unsave_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-48dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/picture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_star_black_24dp"
        android:tint="@color/black"
        app:backgroundTint="@color/colorAccent"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@id/picture" />

    <RelativeLayout
        android:id="@+id/saves_count_and_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title">

        <ImageView
            android:id="@+id/author_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/author_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/author_picture"
            android:layout_toEndOf="@+id/author_picture"
            android:layout_centerVertical="true"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/saves_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:layout_toRightOf="@id/author_username"
            android:layout_toEndOf="@id/author_username"
            android:layout_margin="10dp"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:textStyle="italic" />

    </RelativeLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_below="@id/saves_count_and_author"
        android:layout_margin="10dp"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/map"/>

</RelativeLayout>