<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_title_and_description"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pachatary.presentation.common.edition.EditTitleAndDescriptionActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_edit_title_and_description">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/edit_title_and_description_done_button"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/edit_title_and_description_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_title_and_description_title" />

        <EditText
            android:id="@+id/edit_title_and_description_title_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:inputType="textCapSentences"
            android:lines="1" />

        <TextView
            android:id="@+id/edit_title_and_description_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_title_and_description_description" />

        <EditText
            android:id="@+id/edit_title_and_description_description_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences" />

    </LinearLayout>

    <Button
        android:id="@+id/edit_title_and_description_done_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/edit_title_and_description_done" />

</RelativeLayout>

