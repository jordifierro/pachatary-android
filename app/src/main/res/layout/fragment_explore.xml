<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pachatary.presentation.main.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText
        android:id="@+id/experiences_search_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/experiences_search_button"
        android:layout_toStartOf="@+id/experiences_search_button"
        android:inputType="text" />

    <ImageButton
        android:id="@+id/experiences_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/experiences_location_button"
        android:layout_toStartOf="@+id/experiences_location_button"
        app:srcCompat="@drawable/ic_search_black_24dp" />

    <ImageButton
        android:id="@+id/experiences_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_navigation_black_24dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/experiences_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/experiences_search_edittext"/>

    <ProgressBar
        android:id="@+id/experiences_progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/experiences_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="50dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_refresh"
        android:tint="@color/grey"
        android:contentDescription="@string/retry"
        android:visibility="gone"
        tools:visibility="visible"/>

</RelativeLayout>
