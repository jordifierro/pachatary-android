<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/MyButton</item>
        <item name="actionBarDivider">@null</item>
        <item name="actionBarSize">100dp</item>
        <item name="actionBarStyle">@style/AppTheme.PopupOverlay</item>
        <item name="editTextStyle">@style/MyEditText</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyButton.Colored" parent="MyButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_shape_colored</item>
    </style>

    <style name="MyButton.White" parent="MyButton">
        <item name="android:textColor">@drawable/text_black</item>
        <item name="android:background">@drawable/button_shape_white</item>
    </style>

    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">46dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/edittext_shape_grey</item>
    </style>

    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_keyboard_arrow_left</item>
    </style>

</resources>
